#!/bin/bash

source "$HOME/.recon-scripts/vars.sh"

if [ ! -f "$1/webservers.txt" ]; then
    echo -e "$Error webservers.txt not found. Skipping..."
    exit 0
fi

nuclei_dir="$1/nuclei"
if [[ ! -d $nuclei_dir ]]; then
    mkdir $nuclei_dir
fi
target_name=$(basename "$1")
echo -e "$Run Scanning for low-hanging fruits on $target_name assets using nuclei..."
nuclei -pbar -l "$1/webservers.txt" -t "$NUCLEI_TEMPLATES_PATH/cves" -o "$nuclei_dir/cves.txt"
nuclei -pbar -l "$1/webservers.txt" -t "$NUCLEI_TEMPLATES_PATH/subdomain-takeover" -o "$nuclei_dir/subdomain-takeover.txt"
nuclei -pbar -l "$1/webservers.txt" -t "$NUCLEI_TEMPLATES_PATH/dns" -o "$nuclei_dir/dns.txt"
nuclei -pbar -l "$1/webservers.txt" -t "$NUCLEI_TEMPLATES_PATH/vulnerabilities" -o "$nuclei_dir/vulnerabilities.txt"
nuclei -pbar -l "$1/webservers.txt" -t "$NUCLEI_TEMPLATES_PATH/default-credentials" -o "$nuclei_dir/default-credentials.txt"
nuclei -pbar -l "$1/webservers.txt" -t "$NUCLEI_TEMPLATES_PATH/workflows" -o "$nuclei_dir/workflows.txt"
